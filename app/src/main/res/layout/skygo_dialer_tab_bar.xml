<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/voip_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/voip_menu" />

    <ImageView
        android:id="@+id/voip_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/voip_phone" />

    <ImageView
        android:id="@+id/voip_recent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/voip_recent" />

    <ImageView
        android:id="@+id/voip_contacts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/voip_contact" />
</LinearLayout>