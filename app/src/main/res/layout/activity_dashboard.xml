                                android:textSize="9dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!--skyGo dialer scrren-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal">

                        <!--skyGo dialer scrren-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:background="@drawable/dashboardgredient2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="135dp"
                                android:background="@drawable/skygomap_map1"
                                android:gravity="center"
                                android:onClick="skyGoDailer">

                                <ImageView
                                    android:id="@+id/skyGoDialer"
                                    android:layout_width="231dp"
                                    android:layout_height="105dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="14dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/skygodealer" />

                                <ImageView
                                    android:id="@+id/skyGoLogo"
                                    android:layout_width="104dp"
                                    android:layout_height="73dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="24dp"
                                    android:src="@drawable/go" />

                                <TextView
                                    android:id="@+id/balanceShowInDashboard"
                                    android:layout_width="wrap_content"
