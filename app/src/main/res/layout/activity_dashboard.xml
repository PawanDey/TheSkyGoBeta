            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--dashboard screen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shadow_black_outside"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/threeLines"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:onClick="threeLines"
                    android:padding="10dp"
                    android:src="@drawable/threeline"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:fontFamily="@font/segoe_bold"
                    android:gravity="center"
                    android:text="@string/textDashboard"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/notificationButton"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:onClick="notificationButton"
                    android:padding="10dp"
                    android:src="@drawable/notification1" />


            </LinearLayout>

