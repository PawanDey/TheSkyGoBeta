                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="10dp"
                                tools:visibility="invisible" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!--Recent Activation DataServer-->
                    <LinearLayout
                        android:id="@+id/RecentActivateOnMobileDataServer"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/dashboardgredient2"
                        android:onClick="btnExtendMSISDNClickDataServer"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/textView12DataServer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="19dp"
                                android:fontFamily="@font/segoe_bold"
