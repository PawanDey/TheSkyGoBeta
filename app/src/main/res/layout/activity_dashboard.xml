                                android:layout_marginBottom="8dp"
                                android:text=" "
                                android:textColor="#A6FFFFFF"
                                android:textSize="9dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!--Activate Sim DataServer-->
                    <LinearLayout
                        android:id="@+id/ActivateSimLayoutDataServer"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/dashboardgredient2"
                        android:onClick="btnActivateSIMClickDataServer"
