                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1">

                                <LinearLayout
                                    android:id="@+id/Linear_uber"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:background="@drawable/dashboarddgredient5"
                                    android:gravity="center"
                                    android:onClick="clickOnLyft"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/lyft" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/segoe"
                                        android:paddingTop="3dp"
                                        android:text="Lyft"
                                        android:textColor="#333232"
                                        android:textSize="10dp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="0dp"

                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1">

                                <LinearLayout
                                    android:id="@+id/Linear_fooddelivery"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:background="@drawable/dashboarddgredient5"
                                    android:gravity="center"
                                    android:onClick="clickOnGrubHub"
                                    android:orientation="vertical"
                                    tools:ignore="OnClick">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/fooddelivery" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:fontFamily="@font/segoe"
                                        android:paddingTop="3dp"
                                        android:text="GrubHub"
                                        android:textColor="#333232"

                                        android:textSize="10dp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="0dp"

                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1">

                                <LinearLayout
                                    android:id="@+id/Linear_hotel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:background="@drawable/dashboarddgredient5"
                                    android:gravity="center"
                                    android:onClick="clickOnExpedia"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/expedia" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"


                                        android:fontFamily="@font/segoe"
                                        android:paddingTop="3dp"
                                        android:text="Expedia"
