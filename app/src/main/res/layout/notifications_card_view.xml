<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <TextView
        android:id="@+id/dealerName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/Pic"
        android:fontFamily="@font/segoe_semi_bold"
        android:maxLines="1"
        android:text="Dealer Name"
        android:textColor="#5A5A5A"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/Pic"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/userimage"
        android:scaleType="center" />

    <TextView
        android:id="@+id/dealerMessage"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dealerName"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Pic"
        android:gravity="left"
        android:textColor="#707070"
        android:fontFamily="@font/segoe"
        android:text="here is message"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/dealerTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="18dp"
        android:fontFamily="@font/segoe_italic"
        android:text="1 month ago"
        android:textColor="#5A5A5A"
        android:textSize="11dp" />


    <TextView
        android:id="@+id/border1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/dealerMessage"
        android:background="#808080"
        android:layout_margin="10dp"
        android:backgroundTint="#48707070" />


</RelativeLayout>
