<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.paymentSucessfull">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gredientthankyou">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="517dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="131dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="236dp"
                android:layout_height="81dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="192dp"
                android:gravity="center"
                android:text="Your Order was Successfully Proccessed"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="230dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginBottom="120dp"
                android:background="@drawable/gredientbacktohome"
                android:gravity="center"
                android:text="BACK TO HOME"
                android:textColor="#515151"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backToHome"
                android:layout_width="match_parent"
                android:layout_height="515dp"
                android:onClick="backToHome"
                android:src="@drawable/mapthanku" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:layout_above="@+id/textView2"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/thankyou" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>